{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make and send to main",
            "type": "shell",
            "command": "make -j8 && nxlink -p ComicNX.nro -a 192.168.10.13 out/*.nro",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "make and debug",
            "type": "shell",
            "command": "make -j8 && nxlink -p ComicNX.nro -a 192.168.10.13 out/*.nro -s",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean build",
            "type": "shell",
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}